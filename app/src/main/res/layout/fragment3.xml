<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:src="@drawable/friendcircle1"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="朋友圈"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/shipinhao" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="视频号"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/icon_scan1" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="扫一扫"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:src="@drawable/yaoyiyao"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="摇一摇"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/look" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="看一看"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:src="@drawable/souyisou"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="搜一搜"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:src="@drawable/near"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="直播和附近"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/goumai" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="购物"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:src="@drawable/game"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:text="游戏"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>

</LinearLayout>