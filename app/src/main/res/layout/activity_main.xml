<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/re"
        android:background="#D5DAD9"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="微信"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/popu"
            android:src="@drawable/add"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_above="@+id/li"
        android:layout_below="@+id/re"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/li"
        android:background="#C5BEBE"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <RadioButton

                android:gravity="center"
                android:id="@+id/wehcat"
                android:layout_weight="1"
                android:drawableTop="@drawable/chane_chat"
                android:textColor="@drawable/changetext_chat"
                android:text="微信"
                android:button="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/mail"
                android:layout_weight="1"
                android:gravity="center"

                android:text="通讯录"
                android:button="@null"
                android:drawableTop="@drawable/change_contarct"
                android:textColor="@drawable/changetext_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/find"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/change_find"
                android:textColor="@drawable/changetext_chat"
                android:text="发现"
                android:button="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/myself"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/change_my"
                android:textColor="@drawable/changetext_chat"
                android:text="我"
                android:button="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>